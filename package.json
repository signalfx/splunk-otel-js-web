{
	"name": "@splunk/otel-web-dev-root",
	"private": true,
	"version": "0.23.0-alpha.5",
	"--workspaces": "Hardcoded so npm runs workspaces commands in order",
	"workspaces": [
		"packages/web",
		"packages/session-recorder",
		"packages/build-plugins",
		"packages/integration-tests"
	],
	"engines": {
		"--": "Versions required for development only (recent enough to use npm workspaces)",
		"node": ">=22",
		"npm": ">=10"
	},
	"scripts": {
		"compile": "pnpm -r run compile",
		"dev": "pnpm -r run dev",
		"lint": "run-p lint:eslint lint:prettier lint:markdown",
		"lint:fix": "run-p lint:eslint:fix lint:prettier:fix lint:markdown:fix",
		"lint:eslint": "eslint .",
		"lint:eslint:fix": "pnpm run lint:eslint --fix",
		"lint:prettier": "prettier --ignore-path .gitignore --check '**/*.{json,yml,html,css}'",
		"lint:prettier:fix": "pnpm run lint:prettier --write",
		"lint:markdown": "markdownlint *.md docs/*.md --ignore CHANGELOG.md",
		"lint:markdown:fix": "pnpm run lint:markdown --fix",
		"test:unit": "vitest --run",
		"test:unit:watch": "vitest --watch",
		"postversion": "tsx ./scripts/version-update.mts",
		"version:bump": "pnpm version --workspaces --include-workspace-root",
		"version:check": "tsx ./scripts/version-check.mts",
		"tag:check": "tsx ./scripts/tag-check.mts",
		"size-limit": "size-limit"
	},
	"devDependencies": {
		"@aws-sdk/client-cloudfront": "^3.774.0",
		"@aws-sdk/client-s3": "^3.758.0",
		"@eslint/js": "^9.29.0",
		"@octokit/request": "^10.0.2",
		"@size-limit/file": "^11.2.0",
		"@stylistic/eslint-plugin": "^4.4.1",
		"@swc/core": "^1.11.22",
		"@swc/helpers": "^0.5.17",
		"@types/ws": "^8.18.0",
		"@typescript-eslint/eslint-plugin": "^8.34.1",
		"@typescript-eslint/parser": "^8.34.1",
		"@vitest/browser": "^3.2.3",
		"@vitest/coverage-istanbul": "^3.2.3",
		"@vitest/ui": "^3.2.3",
		"dotenv": "^16.4.7",
		"eslint": "^9.29.0",
		"eslint-config-prettier": "^10.1.5",
		"eslint-plugin-headers": "1.3.3",
		"eslint-plugin-prettier": "^5.5.0",
		"fastify": "^5.3.2",
		"globals": "^16.0.0",
		"markdownlint-cli": "^0.45.0",
		"npm-run-all": "^4.1.5",
		"playwright": "^1.53.0",
		"prettier": "^3.5.3",
		"size-limit": "^11.2.0",
		"socket.io": "^4.8.1",
		"swc-loader": "^0.2.6",
		"tsx": "^4.19.4",
		"typescript": "^5.8.2",
		"typescript-eslint": "^8.34.1",
		"vitest": "^3.2.3",
		"ws": "^8.18.1"
	}
}
