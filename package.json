{
	"name": "@splunk/otel-web-dev-root",
	"private": true,
	"version": "1.2.0",
	"engines": {
		"node": ">=22",
		"pnpm": ">=10"
	},
	"scripts": {
		"build": "turbo run build --env-mode=loose --cache-dir=.turbo",
		"dev": "FORCE_COLOR=1 turbo run dev --env-mode=loose",
		"clean": "rm -rf .turbo && turbo run clean",
		"lint": "run-p lint:eslint lint:prettier lint:markdown",
		"lint:fix": "run-p lint:eslint:fix lint:prettier:fix lint:markdown:fix",
		"lint:eslint": "eslint .",
		"lint:eslint:fix": "pnpm run lint:eslint --fix",
		"lint:prettier": "prettier --ignore-path .gitignore --check '**/*.{json,yml,html,css,md}'",
		"lint:prettier:fix": "pnpm run lint:prettier --write",
		"lint:markdown": "markdownlint *.md docs/*.md --ignore CHANGELOG.md",
		"lint:markdown:fix": "pnpm run lint:markdown --fix",
		"test": "turbo run --env-mode=loose test:e2e test:unit",
		"test:unit": "vitest --run",
		"test:e2e": "turbo run --env-mode=loose --filter=@splunk/otel-js-web-integration-tests test:e2e",
		"postversion": "tsx ./scripts/version-update.mts",
		"version:bump": "pnpm version --workspaces --include-workspace-root",
		"version:check": "tsx ./scripts/version-check.mts",
		"tag:check": "tsx ./scripts/tag-check.mts",
		"size-limit": "size-limit"
	},
	"devDependencies": {
		"@aws-sdk/client-cloudfront": "^3.962.0",
		"@aws-sdk/client-s3": "^3.962.0",
		"@eslint/js": "^9.39.2",
		"@octokit/request": "^10.0.7",
		"@size-limit/file": "^12.0.0",
		"@stylistic/eslint-plugin": "^5.6.1",
		"@types/ws": "^8.18.0",
		"@typescript-eslint/eslint-plugin": "^8.52.0",
		"@typescript-eslint/parser": "^8.52.0",
		"@vitest/browser": "^4.0.16",
		"@vitest/browser-playwright": "^4.0.16",
		"@vitest/coverage-istanbul": "^4.0.16",
		"@vitest/ui": "^4.0.16",
		"dotenv": "^17.2.3",
		"eslint": "^9.39.2",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-headers": "1.3.3",
		"eslint-plugin-perfectionist": "^5.2.0",
		"eslint-plugin-prettier": "^5.5.4",
		"eslint-plugin-unicorn": "^62.0.0",
		"fastify": "^5.6.2",
		"globals": "^17.0.0",
		"markdownlint-cli": "^0.47.0",
		"npm-run-all": "^4.1.5",
		"playwright": "^1.57.0",
		"prettier": "^3.7.4",
		"size-limit": "^12.0.0",
		"socket.io": "^4.8.3",
		"tsx": "^4.21.0",
		"turbo": "^2.7.2",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.52.0",
		"vitest": "^4.0.16",
		"ws": "^8.18.3"
	},
	"packageManager": "pnpm@10.20.0"
}
