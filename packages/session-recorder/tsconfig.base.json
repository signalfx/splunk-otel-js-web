{
	"compilerOptions": {
		"allowJs": true,
		"checkJs": false,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"module": "NodeNext",
		"noEmitOnError": true,
		"pretty": true,
		"resolveJsonModule": true,
		"target": "ES2017",
		"types": ["node"],
		"skipLibCheck": true,
		"strict": true
	},
	"include": ["src/**/*.ts", "src/**/*.js"],
	"exclude": ["node_modules"]
}
