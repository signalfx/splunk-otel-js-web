<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>setTimeout</title>

  <%- renderAgent({
    context: {
      async: true
    }
  }) %>
</head>
<body>
  <h1>setTimeout</h1>

  <button type="button" id="btn1">Short timeout</button>
  <button type="button" id="btn2">Long timeout</button>

  <script>
    btn1.addEventListener('click', function () {
      window.testing = true;
      setTimeout(function () {
        SplunkRum.provider.getTracer('default').startSpan('context-child').end();
        window.testing = false;
      }, 1);
    });
    btn2.addEventListener('click', function () {
      window.testing = true;
      setTimeout(function () {
        SplunkRum.provider.getTracer('default').startSpan('context-child').end();
        window.testing = false;
      }, 35);
    });
  </script>
</body>
</html>
