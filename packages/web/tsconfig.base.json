{
	"compilerOptions": {
		"forceConsistentCasingInFileNames": true,
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"esModuleInterop": true,
		"noEmitOnError": true,
		"pretty": true,
		"resolveJsonModule": true,
		"target": "ESNext",
		"skipLibCheck": true,
		"strict": true,
		"lib": ["ESNext", "DOM", "DOM.Iterable"]
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules"]
}
