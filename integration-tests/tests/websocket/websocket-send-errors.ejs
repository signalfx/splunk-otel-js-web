<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>Websocket</title>

	<%- renderAgent({instrumentations: {websocket: true}}) %>
</head>
<body>
	<h1>Websocket send errors</h1>
	<button id="connectWs" type="button">Connect to a websockets server</button>
	<script>
			var socket;
			connectWs.addEventListener('click', function () {
				var protocol = window.location.search.match(/wsProtocol=(\w+)/);
				var port = window.location.search.match(/wsPort=(\d+)/);
				var url = (protocol ? protocol[1] : 'wss') + '://' + document.location.hostname + ':' + (port ? port[1] : (document.location.port + 1)) + '/';
				socket = new WebSocket(url);
				socket.send('Hello world!');
			});
	</script>
</body>
</html>
