<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>React</title>

  <%- renderAgent({
    context: {
      async: true
    }
  }) %>

  <script src="https://unpkg.com/react@latest/umd/react.production.min.js"></script>
  <script src="https://unpkg.com/react-dom@latest/umd/react-dom.production.min.js"></script>
  <script src="https://unpkg.com/babel-core@5.2.17/browser.min.js"></script>
</head>
<body>
  <h1>React</h1>
  <div id="root"></div>

  <script type="text/babel">

    function App() {

      const [show, setShow] = React.useState(false);
      function onClick(e) {
        setShow(!show); 
      }
      
      return (
        <div>
          <button id="btn1" onClick={onClick}>Toggle</button>
          {show && <Lazy />}
        </div>
      );
    }

    function Lazy() {
      React.useEffect(() => {
        const span = SplunkRum.provider.getTracer('test').startSpan('custom-span').end()
      });    

      return (
        <h2>Lazy</h2>
      );
    }

    ReactDOM.render(
      <App />,
      document.getElementById('root')
    );
  </script>
</body>


</body>
</html>